{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "musicmanager-app",
  "version": "0.1.0",
  "identifier": "com.ahlre.musicmanager",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  
  "app": {
    "windows": [
      {
        "title": "musicmanager-app",
        "width": 900,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
       "assetProtocol": {
          "enable": true,
          "scope": ["D:/**"]
        },
       "csp": null 
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }

}
